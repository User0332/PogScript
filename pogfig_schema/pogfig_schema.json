{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "title" : "Pogfig",
  "description" : "Configuration for PogScript Compilations",
  "type" : "object",
  "properties" : {

    "modifiers.paths" : {
      "description" : "The file modifier paths",
      "type" : "array",
      "items" : {
          "type" : "string"
      },
      "minItems" : 1,
      "uniqueItems" : true
    },

    "modifiers.names" : {
      "description" : "Modifier names",
      "type" : "object"
    },

    "imports.paths" : {
      "description" : "Import paths",
      "type" : "array",
      "items" : {
          "type" : "string"
      },
      "minItems" : 1,
      "uniqueItems" : true
    },

    "imports.names" : {
      "description" : "Special import aliases",
      "type" : "object"
    },

    "compiler.optimizations" : {
      "description" : "Compiler optimization level",
      "type" : "number"
    }

  },
  
  "required" : ["modifiers.paths", "modifiers.names", 
      "imports.paths", "imports.names", "compile.optimizations"]
}